
@model List<Urun>

<a asp-action="Ekle" asp-controller="Home" asp-area="Admin" class="btn btn-primary btn-sm my-2">Ekle</a>

<table class="table table-sm table-bordered table-hover mt-2">
    <tr>
        <th>Id</th>
        <th>Kategorileri</th>
        <th>Ad</th>
        <th>Fiyat</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td><getirKategoriAd urun-id="@item.Id"></getirKategoriAd></td>
            <td>@item.Ad</td>
            <td>@item.Fiyat</td>
            <td>
                <a asp-action="Sil" asp-controller="Home"
                   asp-route-id="@item.Id" asp-area="Admin" class="btn btn-danger btn-sm">
                    Sil
                </a>
                <a asp-action="Guncelle" asp-controller="Home"
                   asp-route-id="@item.Id" asp-area="Admin" class="btn btn-warning btn-sm">
                    Güncelle
                </a>
                <a asp-action="AtaKategori" asp-controller="Home"
                   asp-route-id="@item.Id" asp-area="Admin" class="btn btn-dark btn-sm">
                    Ata Kategori
                </a>

            </td>
        </tr>
    }

</table>
