
@model KullanıcıGirisModel

<form asp-action="GirisYap" method="post" class="p-4 w-50 mx-auto shadow">
    <div class="form-group">
        <label>Kullanıcı Adı</label>
        <span asp-validation-for="KullaniciAd" class="text-danger"></span>
        <input type="text" asp-for="KullaniciAd" class="form-control" />
    </div>
    <div class="form-group">
        <label>Şifre</label>
        <span asp-validation-for="Sifre" class="text-danger"></span>
        <input type="password" asp-for="Sifre" class="form-control" />
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="BeniHatirla" class="form-check-input" />
        <label asp-for="BeniHatirla" class="form-check-label"> Beni Hatırla </label>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger">

    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-block btn-info"> Giriş Yap</button>
    </div>
</form>
@section JavaScript
{

    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>

    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
